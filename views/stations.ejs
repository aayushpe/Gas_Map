<% layout('layout/boilerplate'); %> 
    <div class="text-center mt-2">
        <h1 class="text-center">All Stations</h1>
        <a class="btn btn-success mb-3 mt-3" href="/stations/new">Add a new Station</a>
    </div>
        <% for(let station of allStations){ %>
            <div class="card mb-3">
                <div class="row g-0">
                  <div class="col-md-4">
                        <% for(let img of station.images){ %>
                            <img src="<%= img.url %>" class="img-fluid rounded-start" alt="station">
                       <% } %> 
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"> <%= station.title %> </h5>
                      <p class="card-text"><%= station.description %> </p>
                      <p class="card-text"><small class="text-muted"><%= station.location %> </small></p>
                      <a class="btn btn-primary" href="/stations/<%= station._id %> ">Click to this view this <%= station.title %> </a>
                    </div>
                  </div>
                </div>
              </div>
       <% } %> 